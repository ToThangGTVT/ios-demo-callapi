def defaultPod
    pod 'Kingfisher', '~> 5.0'
    pod 'XMLCoder', '~> 0.11.0'
    pod 'SwiftyStoreKit'
    pod "PromiseKit/CorePromise", "~> 6.8"
    pod 'Swinject'
    pod 'SnapKit', '~> 5.0.0'
    pod 'ContextMenu'
    pod 'SwinjectStoryboard' , :git => 'https://github.com/Swinject/SwinjectStoryboard.git', :branch => 'master'
end

target 'App test' do
  # Comment the next line if you don't want to use dynamic frameworks
  use_frameworks!

  # Pods for App test
  defaultPod
end
